<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/folderImage"
        android:src="@drawable/ic_baseline_folder"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:textColor="#fff"
        android:id="@+id/count_files_folder"
        android:background="@drawable/drawable_drw"
        android:layout_marginStart="-30dp"
        android:layout_toEndOf="@+id/folderImage"
        android:layout_alignBottom="@+id/folderImage"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/folderName"
        android:text="Folder Name"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/folderImage"
        android:textColor="#fff"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"/>

</RelativeLayout>